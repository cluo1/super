<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.luo.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="com.luo.entity.User" >
    <id column="user_id" property="id" jdbcType="INTEGER" />
    <result column="user_name" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="CHAR" />
    <result column="address" property="address" jdbcType="VARCHAR" />
    <result column="enabled" property="enabled" jdbcType="BIT" />
    <result column="userface" property="userface" jdbcType="VARCHAR" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
  </resultMap>

  <resultMap id="lazyLoadRoles" type="com.luo.entity.User" extends="BaseResultMap">
    <collection property="roles" ofType="com.luo.entity.Role" select="com.luo.mapper.UserMapper.getRolesByUserId"
                column="user_id"></collection>
  </resultMap>
  <sql id="Base_Column_List" >
    user_id, user_name, password, phone, address, enabled, userface, remark
  </sql>
  <select id="loadUserByUsername" resultMap="lazyLoadRoles" >
    select
    <include refid="Base_Column_List" />
    from super_user
    where user_name = #{user_name,jdbcType=VARCHAR}
  </select>
  <select id="loadUserByUserNameAndPwd" resultMap="lazyLoadRoles"  >
    select 
    <include refid="Base_Column_List" />
    from super_user
    where user_name = #{user_name,jdbcType=VARCHAR}
        and password = #{password,jdbcType=VARCHAR}
  </select>

  <select id="getRolesByUserId" resultType="com.luo.entity.Role">
       SELECT r.role_id id,r.role_name_en nameEn,r.role_name_zh nameZh FROM super_user_role ur,super_role r where ur.role_id=r.role_id AND ur.user_id = #{id}
    </select>
</mapper>